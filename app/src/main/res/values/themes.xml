<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ElektraChallenge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.ElektraChallenge" parent="Base.Theme.ElektraChallenge" />

    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:padding">@dimen/_14dp</item>
        <item name="android:background">@drawable/bg_et_gray</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="Button.SemiRounded">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@drawable/bg_btn_semi_rounded_primary</item>
    </style>

    <style name="Button.SemiRounded.White">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@drawable/bg_btn_semi_rounded_secondary</item>
    </style>
</resources>